<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Divider">
        <item name="android:background">@color/basil_green_500</item>
    </style>

    <style name="Ingredient" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/lekton</item>
        <item name="android:textColor">@color/basil_green_800</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TagChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">0dp</item>
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipIcon">@drawable/small_circle</item>
        <item name="chipIconSize">5dp</item>
        <item name="android:textColor">@color/basil_green_800</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="NewTagChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipIcon">@drawable/vd_add</item>
        <item name="android:textColor">@color/basil_green_800</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/basil_green_800</item>

    </style>

</resources>
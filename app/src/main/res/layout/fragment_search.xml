<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/wrapped_search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="72dp"/>

    <TextView
        android:id="@+id/searchHeader"
        android:text="@string/search"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:fontFamily="@font/lekton"
        android:textAllCaps="true"
        android:textColor="@color/basil_green_800"
        android:scaleY=".8"
        android:scaleX=".8"
        android:textAlignment="center"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/newRecipeHeader"
        android:text="@string/new_recipe"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/searchHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:fontFamily="@font/lekton"
        android:textAllCaps="true"
        android:textColor="@color/basil_green_800"
        android:alpha=".5"
        android:scaleY=".8"
        android:scaleX=".8"
        android:textAlignment="center"
        android:padding="8dp"/>

    <View
        android:id="@+id/divider"
        android:layout_width="40dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/newRecipeHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"
        android:background="@color/basil_green_800"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="80dp"
        android:hint="@string/search_hint"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="36dp"
            android:imeOptions="actionDone" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/send"
        android:src="@drawable/vd_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/wrapper"
        app:layout_constraintBottom_toBottomOf="@+id/wrapper"
        app:layout_constraintEnd_toEndOf="@+id/wrapper"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="@color/basil_green_800"/>

    <TextView
        android:id="@+id/header"
        style="@style/HeaderBig"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:translationY="45dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
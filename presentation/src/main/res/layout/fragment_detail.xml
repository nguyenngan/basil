<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/clickTheft"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

<!--    here just to keep proportions-->
    <View
        android:id="@+id/scrim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/basil_scrim"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintVertical_bias="@dimen/image_vertical_bias"
        android:layout_marginStart="@dimen/recipe_margin"
        android:layout_marginEnd="@dimen/recipe_margin"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <dev.olog.basil.presentation.widget.BasilGroup
        android:id="@+id/fadeItems"
        app:constraint_referenced_ids="description, divider, allergens"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <dev.olog.basil.presentation.widget.TextSwitcher
        android:id="@+id/textSwitcher"
        app:layout_constraintTop_toTopOf="@+id/scrim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scrim"
        android:layout_width="0dp"
        android:layout_height="200dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        app:layout_constraintStart_toStartOf="@+id/scrim"
        app:layout_constraintEnd_toEndOf="@+id/scrim"
        app:layout_constraintBottom_toBottomOf="@+id/textSwitcher"
        android:layout_marginTop="@dimen/margin_big"
        android:alpha="0"
        tools:alpha="1"
        style="@style/Divider" />

    <ImageButton
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bottom_offset"
        android:translationY="-32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:icon="@drawable/vd_arrow_down"
        android:src="@drawable/vd_arrow_down"
        android:tint="@color/basil_green_800"
        android:background="@null"
        android:scaleX="3"
        android:scaleY="1.5"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/scrim"
        app:layout_constraintEnd_toEndOf="@+id/scrim"
        app:layout_constraintStart_toStartOf="@+id/scrim"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:fontFamily="@font/lekton_bold"
        tools:text="@tools:sample/lorem/random"
        android:textColor="@color/basil_green_800"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="26sp"
        app:autoSizeMinTextSize="20sp"
        android:textAlignment="center"
        android:gravity="center"
        android:ellipsize="end"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/allergens"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:layout_constraintBottom_toTopOf="@+id/bottomWrapper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:chipSpacingHorizontal="50dp"
        android:layout_marginTop="@dimen/margin_big">

        <com.google.android.material.chip.Chip
            android:id="@+id/glutenFree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gluten-free"
            app:chipIcon="@drawable/vd_gluten_free"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.google.android.material.chip.Chip
            android:id="@+id/eggFree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Egg Free"
            app:chipIcon="@drawable/vd_egg_free"
            android:visibility="gone"
            tools:visibility="visible"/>

    </com.google.android.material.chip.ChipGroup>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomWrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/bottomDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toTopOf="@+id/ingredients"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/basil_green_800"
            android:alpha=".4"/>

        <TextView
            android:id="@+id/ingredients"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/directions"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Ingredients"
            android:gravity="center"
            android:textColor="@color/basil_green_800"
            android:textAppearance="@style/Button" />

        <TextView
            android:id="@+id/directions"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ingredients"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Directions"
            android:gravity="center"
            android:textColor="@color/basil_green_800"
            android:textAppearance="@style/Button" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
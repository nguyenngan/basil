<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detailRoot">

    <View
        android:id="@+id/scrim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:background="@color/basil_green_100"
        tools:alpha=".4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="108dp"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <dev.olog.basil.presentation.widget.NoScrollRecyclerView
        android:id="@+id/titleOnlyList"
        android:layout_width="0dp"
        android:layout_height="@dimen/panel_height"
        tools:listitem="@layout/item_recipe_title"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="48dp"
        android:clipChildren="false"
        android:clipToPadding="false"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recipeHeader"
        android:layout_width="0dp"
        android:layout_height="@dimen/panel_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/scrim"
        app:layout_constraintEnd_toEndOf="@id/scrim">

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/arrow"
            android:layout_marginTop="@dimen/margin_big"
            style="@style/Divider"
            android:alpha="0"
            tools:alpha="1"/>

        <ImageButton
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:icon="@drawable/vd_arrow_down"
            android:src="@drawable/vd_arrow_down"
            android:tint="@color/basil_green_800"
            android:background="@null"
            android:scaleX="2"
            tools:alpha="0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_very_big"
        android:layout_marginEnd="@dimen/margin_very_big"
        android:layout_marginBottom="@dimen/margin_very_big"
        app:layout_constraintBottom_toBottomOf="@+id/scrim"
        app:layout_constraintEnd_toEndOf="@+id/scrim"
        app:layout_constraintStart_toStartOf="@+id/scrim"
        app:layout_constraintTop_toBottomOf="@+id/recipeHeader"
        app:fontFamily="@font/lekton_bold"
        tools:text="@tools:sample/lorem"
        android:textColor="@color/basil_green_800"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="26sp"
        app:autoSizeMinTextSize="20sp"
        android:textAlignment="center"
        android:gravity="center"
        android:ellipsize="end"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/midWrapper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:layout_constraintStart_toStartOf="@id/scrim"
        app:layout_constraintEnd_toEndOf="@id/scrim"
        app:layout_constraintBottom_toTopOf="@+id/bottomWrapper"
        android:layout_marginTop="36dp">

        <TextView
            android:id="@+id/caloriesHeader"
            android:text="Calories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/proteinHeader"
            style="@style/RecipeDescriptionHeader" />

        <TextView
            android:id="@+id/proteinHeader"
            android:text="Protein"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/caloriesHeader"
            app:layout_constraintStart_toEndOf="@+id/caloriesHeader"
            app:layout_constraintEnd_toStartOf="@id/fatHeader"
            style="@style/RecipeDescriptionHeader"/>

        <TextView
            android:id="@+id/fatHeader"
            android:text="Fat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/caloriesHeader"
            app:layout_constraintStart_toEndOf="@+id/proteinHeader"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/RecipeDescriptionHeader"/>

        <TextView
            android:id="@+id/calories"
            tools:text="465g"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/RecipeDescription"
            app:layout_constraintTop_toBottomOf="@+id/caloriesHeader"
            app:layout_constraintStart_toStartOf="@+id/caloriesHeader"
            app:layout_constraintEnd_toEndOf="@+id/caloriesHeader" />

        <TextView
            android:id="@+id/protein"
            tools:text="4g"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/RecipeDescription"
            app:layout_constraintTop_toTopOf="@+id/calories"
            app:layout_constraintStart_toStartOf="@+id/proteinHeader"
            app:layout_constraintEnd_toEndOf="@+id/proteinHeader" />

        <TextView
            android:id="@+id/fat"
            tools:text="4g"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/RecipeDescription"
            app:layout_constraintTop_toTopOf="@+id/calories"
            app:layout_constraintStart_toStartOf="@+id/fatHeader"
            app:layout_constraintEnd_toEndOf="@+id/fatHeader" />

        <View
            android:id="@+id/midDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/calories"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_very_big"
            style="@style/Divider"/>

        <View
            android:id="@+id/divider1"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/caloriesHeader"
            app:layout_constraintStart_toEndOf="@id/caloriesHeader"
            app:layout_constraintEnd_toStartOf="@id/proteinHeader"
            app:layout_constraintBottom_toBottomOf="@+id/calories"
            style="@style/Divider"
            android:alpha=".6" />

        <View
            android:id="@+id/divider2"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/caloriesHeader"
            app:layout_constraintStart_toEndOf="@id/proteinHeader"
            app:layout_constraintEnd_toStartOf="@id/fatHeader"
            app:layout_constraintBottom_toBottomOf="@+id/calories"
            style="@style/Divider"
            android:alpha=".6"/>

        <com.google.android.material.chip.ChipGroup
            app:layout_constraintTop_toBottomOf="@+id/midDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="50dp"
            android:layout_marginTop="@dimen/margin_big">

            <com.google.android.material.chip.Chip
                android:id="@+id/glutenFree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gluten-free"
                app:chipIcon="@drawable/vd_gluten_free"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.google.android.material.chip.Chip
                android:id="@+id/eggFree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Egg Free"
                app:chipIcon="@drawable/vd_egg_free"
                android:visibility="gone"
                tools:visibility="visible"/>

        </com.google.android.material.chip.ChipGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomWrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/bottomDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toTopOf="@+id/ingredients"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/basil_green_800"
            android:alpha=".4"/>

        <TextView
            android:id="@+id/ingredients"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/directions"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Ingredients"
            android:gravity="center"
            android:textColor="@color/basil_green_800"
            android:textAppearance="@style/Button" />

        <TextView
            android:id="@+id/directions"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ingredients"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Directions"
            android:gravity="center"
            android:textColor="@color/basil_green_800"
            android:textAppearance="@style/Button" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/wrapped_bookmark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="72dp" />

    <TextView
        android:id="@+id/shoppingListHeader"
        android:text="@string/shopping_list"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        style="@style/HeaderSmall"
        android:scaleX=".8"
        android:scaleY=".8"
        android:textColor="@color/basil_green_500"/>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/shoppingListHeader"
        app:layout_constraintStart_toStartOf="@id/shoppingListHeader"
        app:layout_constraintEnd_toEndOf="@id/shoppingListHeader"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="50dp"
        android:background="@color/basil_green_500"/>

    <TextView
        android:id="@+id/appetizersHeader"
        android:text="Appetizers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        style="@style/HeaderSmall"
        tools:textStyle="bold" />

    <View
        android:id="@+id/appetizersLine"
        app:layout_constraintTop_toBottomOf="@+id/appetizersHeader"
        app:layout_constraintStart_toStartOf="@+id/appetizersHeader"
        app:layout_constraintEnd_toEndOf="@+id/appetizersHeader"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/basil_green_800"
        android:translationY="-5dp"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/entreesHeader"
        android:text="EntrÃ©es"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/appetizersHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        style="@style/HeaderSmall" />

    <View
        android:id="@+id/entreesLine"
        app:layout_constraintTop_toBottomOf="@+id/entreesHeader"
        app:layout_constraintStart_toStartOf="@+id/entreesHeader"
        app:layout_constraintEnd_toEndOf="@+id/entreesHeader"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/basil_green_800"
        android:translationY="-5dp"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/dessertsHeader"
        android:text="Desserts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/entreesHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        style="@style/HeaderSmall" />

    <View
        android:id="@+id/dessertsLine"
        app:layout_constraintTop_toBottomOf="@+id/dessertsHeader"
        app:layout_constraintStart_toStartOf="@+id/dessertsHeader"
        app:layout_constraintEnd_toEndOf="@+id/dessertsHeader"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/basil_green_800"
        android:translationY="-5dp"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/cocktailsHeader"
        android:text="Cocktails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dessertsHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        style="@style/HeaderSmall" />

    <View
        android:id="@+id/cocktailsLine"
        app:layout_constraintTop_toBottomOf="@+id/cocktailsHeader"
        app:layout_constraintStart_toStartOf="@+id/cocktailsHeader"
        app:layout_constraintEnd_toEndOf="@+id/cocktailsHeader"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/basil_green_800"
        android:translationY="-5dp"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/header"
        style="@style/HeaderBig"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:translationY="53dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
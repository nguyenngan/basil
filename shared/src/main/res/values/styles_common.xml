<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Divider">
        <item name="android:background">@color/basil_green_500</item>
    </style>

    <style name="Ingredient" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/lekton</item>
        <item name="android:textColor">@color/basil_green_800</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="android:textAppearance">@style/ChipTextAppeareance</item>
        <item name="android:textColor">@color/basil_green_800</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChipTextAppeareance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/lekton_bold</item>
    </style>

</resources>